[Unit]
Description=gunicorn daemon
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/www/py37/django_test/repo
Environment="PATH=/www/py37/bin/"
ExecStart=/www/py37/bin/gunicorn \
        --workers 4 \
        --bind 0.0.0.0:8000 \
        conf.wsgi:application

[Install]
WantedBy=multi-user.target